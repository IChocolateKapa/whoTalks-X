#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('express2demo:server');
var http = require('http');


/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '5664');
app.set('port', port);

/**
 * Create HTTP server.
 */

var server = http.createServer(app);


global.server = server;



var io = require('socket.io')(server);

global.io = io;
global.totalUser = 0;


io.on('connection', function (socket) {

    console.log("listening on 3003......*");
    console.log("a user connected!");
    global.totalUser++;
    io.emit('totalUser', global.totalUser);

    /*记录下有多少人连接*/
    socket.on('disconnect', function(){
        console.log('a user disconnected');
        global.totalUser--;
        io.emit('totalUser', global.totalUser);
    });

    socket.on('chatMessage', function (msg) {
        console.log('received message: ' + msg);
        io.emit('chat message', msg);
    });


    socket.on('sendNewDongtan', function (dongtan) {
        console.log('received message: ', dongtan);
        /*顺便这里该需要存储的就存储*/
        var crud = require('../views/weibo/resource/js/db/crud');

        // var extend = require('util')._extend;
        // var ret = extend({}, dongtan);

        crud.insert('Dongtan', dongtan);

        io.emit("showDongtan", ret);
    });

    socket.on('sendNewComment', function (comment) {
        console.log('received comment: ', comment);
        /*顺便这里该需要存储的就存储*/
        var crud = require('../views/weibo/resource/js/db/crud');
        crud.insert('Dongtan', comment.data);
        io.emit("showComment", comment);
    });

    socket.on('sendLikes', function (info) {
        console.log('received likes info: ', info);
        /*顺便这里该需要存储的就存储*/
        var crud = require('../views/weibo/resource/js/db/crud');
        crud.findById('Dongtan', {'_id': info.id}, function (results) {
            results.likes = results.likes + info.dif;
            results.save();
        });

        io.emit("showLikes", info);
    });
    socket.on('sendLikes2', function (info) {
        console.log('received likes info222: ', info);
        /*顺便这里该需要存储的就存储*/
        var crud = require('../views/weibo/resource/js/db/crud');
        crud.findById('Comments', {'_id': info.id}, function (results) {
            results.likes = results.likes + info.dif;
            results.save();
        });
        io.emit("showLikes2", info);
    });
});
/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
      ? 'Pipe ' + port
      : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
      ? 'pipe ' + addr
      : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
